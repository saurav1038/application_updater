<resources>

    <style name="AppThemeDarkBlue" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorBluePrimary</item>
        <item name="colorPrimaryDark">@color/colorBluePrimaryDark</item>
        <item name="colorAccent">@color/colorBlueAccent</item>
        <item name="colorControlHighlight">?attr/colorPrimaryDark</item>
        <item name="materialCardViewStyle">@style/App.Style.Widget.CardView</item>
        <item name="badgeStyle">@style/App.Style.Widget.Badge</item>
    </style>

    <style name="AppThemeLightBlue" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBluePrimary</item>
        <item name="colorPrimaryDark">@color/colorBluePrimaryDark</item>
        <item name="colorAccent">@color/colorBlueAccent</item>
        <item name="colorControlHighlight">?attr/colorPrimaryDark</item>
        <item name="materialCardViewStyle">@style/App.Style.Widget.CardView</item>
        <item name="badgeStyle">@style/App.Style.Widget.Badge</item>
    </style>

    <style name="AppThemeDarkOrange" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorOrangePrimary</item>
        <item name="colorPrimaryDark">@color/colorOrangePrimaryDark</item>
        <item name="colorAccent">@color/colorOrangeAccent</item>
        <item name="colorControlHighlight">?attr/colorPrimaryDark</item>
        <item name="materialCardViewStyle">@style/App.Style.Widget.CardView</item>
        <item name="badgeStyle">@style/App.Style.Widget.Badge</item>
    </style>

    <style name="AppThemeLightOrange" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorOrangePrimary</item>
        <item name="colorPrimaryDark">@color/colorOrangePrimaryDark</item>
        <item name="colorAccent">@color/colorOrangeAccent</item>
        <item name="colorControlHighlight">?attr/colorPrimaryDark</item>
        <item name="materialCardViewStyle">@style/App.Style.Widget.CardView</item>
        <item name="badgeStyle">@style/App.Style.Widget.Badge</item>
    </style>

    <style name="AppThemeDarkGreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorGreenPrimary</item>
        <item name="colorPrimaryDark">@color/colorGreenPrimaryDark</item>
        <item name="colorAccent">@color/colorGreenAccent</item>
        <item name="colorControlHighlight">?attr/colorPrimaryDark</item>
        <item name="materialCardViewStyle">@style/App.Style.Widget.CardView</item>
        <item name="badgeStyle">@style/App.Style.Widget.Badge</item>
    </style>

    <style name="AppThemeLightGreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorGreenPrimary</item>
        <item name="colorPrimaryDark">@color/colorGreenPrimaryDark</item>
        <item name="colorAccent">@color/colorGreenAccent</item>
        <item name="colorControlHighlight">?attr/colorPrimaryDark</item>
        <item name="materialCardViewStyle">@style/App.Style.Widget.CardView</item>
        <item name="badgeStyle">@style/App.Style.Widget.Badge</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog"/>

    <style name="App.Style.Widget.Badge" parent="Widget.MaterialComponents.Badge">
        <item name="backgroundColor">@color/colorRed</item>
    </style>

    <style name="App.Style.Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="cardBackgroundColor">@color/colorTransparent</item>
    </style>

    <style name="App.Style.Text.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="App.Style.Text.Body1" parent="App.Style.Text.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="App.Style.Text.Body2" parent="App.Style.Text.Body1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="App.Style.Text.Action" parent="App.Style.Text.Title">
        <item name="android:textSize">@dimen/action_text</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>
